{
  "name": "portfolio-luis-saavedra",
  "version": "1.0.0",
  "description": "Portfolio UX/UI de Luis Saavedra",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"php -S localhost:8000 system/router.php\" \"npx tailwindcss -i ./user/themes/portfolio-luis/css/input.css -o ./user/themes/portfolio-luis/css/output.css --watch\"",
    "dev-simple": "tailwindcss -i ./user/themes/portfolio-luis/css/input.css -o ./user/themes/portfolio-luis/css/output.css --watch",
    "tailwind:watch": "tailwindcss -i ./user/themes/portfolio-luis/css/input.css -o ./user/themes/portfolio-luis/css/output.css --watch",
    "tailwind:build": "tailwindcss -i ./user/themes/portfolio-luis/css/input.css -o ./user/themes/portfolio-luis/css/output.css --minify",
    "server": "php -S localhost:8000 system/router.php",
    "build": "npm run tailwind:build",
    "start": "npm run dev"
  },
  "keywords": [
    "portfolio",
    "grav",
    "tailwind",
    "ux",
    "ui"
  ],
  "author": "Luis Saavedra",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16"
  }
}
