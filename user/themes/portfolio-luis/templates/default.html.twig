{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    
    {# Page-specific meta tags #}
    {% if page.header.description %}
        <meta name="description" content="{{ page.header.description|e('html_attr') }}">
    {% endif %}
    
    {% if page.header.keywords %}
        <meta name="keywords" content="{{ page.header.keywords|e('html_attr') }}">
    {% endif %}
    
    {# Open Graph meta tags for social sharing #}
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ page.title|e('html_attr') }} | {{ site.title|e('html_attr') }}">
    <meta property="og:description" content="{{ page.header.description ?: site.metadata.description|e('html_attr') }}">
    <meta property="og:url" content="{{ page.url(true, true) }}">
    {% if page.header.hero_image %}
        <meta property="og:image" content="{{ url(page.media[page.header.hero_image].url, true) }}">
    {% endif %}
    
    {# Twitter Card meta tags #}
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ page.title|e('html_attr') }} | {{ site.title|e('html_attr') }}">
    <meta name="twitter:description" content="{{ page.header.description ?: site.metadata.description|e('html_attr') }}">
    {% if page.header.hero_image %}
        <meta name="twitter:image" content="{{ url(page.media[page.header.hero_image].url, true) }}">
    {% endif %}
    
    {# Structured data for better SEO #}
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": {{ page.title|json_encode|raw }},
        "description": {{ (page.header.description ?: site.metadata.description)|json_encode|raw }},
        "url": "{{ page.url(true, true) }}",
        "mainEntity": {
            "@type": "Person",
            "name": {{ site.author.name|json_encode|raw }},
            "jobTitle": "UI/UX Designer",
            "url": "{{ base_url_absolute }}"
        }
    }
    </script>
{% endblock %}

{% block content %}
{# DEBUG: Let's see what we have #}
<!-- DEBUG INFO:
Page title: {{ page.title }}
Page content exists: {{ page.content ? 'YES' : 'NO' }}
Page template: {{ page.template }}
-->

<div class="relative">
    {# Hero Section - if hero_image is defined #}
    {% if page.header.hero_image %}
    <section class="relative h-64 md:h-80 lg:h-96 overflow-hidden bg-gradient-to-br from-primary-600 to-primary-700">
        <div class="absolute inset-0">
            <img src="{{ url(page.media[page.header.hero_image].url) }}" 
                 alt="{{ page.header.hero_alt ?: page.title }}"
                 class="w-full h-full object-cover object-center opacity-20">
        </div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full flex items-center">
            <div class="text-white">
                <h1 class="text-[20rem] md:text-4xl lg:text-[20rem] font-bold mb-4 leading-tight hero-title">
                    {% if page.header.hero_icon %}
                        <i class="{{ page.header.hero_icon }} mr-2"></i>
                    {% endif %}
                    {{ page.title }}
                </h1>
                {% if page.header.subtitle %}
                    <p class="text-lg md:text-xl text-white/90 max-w-2xl">
                        {{ page.header.subtitle }}
                    </p>
                {% endif %}
            </div>
        </div>
    </section>
    {% endif %}
    
    {# Main Content Area #}
    <article class="py-12 lg:py-20">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            {# Page Title - only show if no hero image #}
            {% if not page.header.hero_image %}
            <header class="mb-12 text-center">
                <h1 class="text-[20rem] text-nowrap font-bold text-gray-900 mb-6 leading-tight">
                    {{ page.title }}
                </h1>
                {% if page.header.subtitle %}
                    <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
                        {{ page.header.subtitle }}
                    </p>
                {% endif %}
                {% if page.date %}
                    <time class="inline-block mt-4 text-sm text-gray-500" datetime="{{ page.date|date('c') }}">
                        {{ page.date|date('j F Y') }}
                    </time>
                {% endif %}
            </header>
            {% endif %}

            {# Page Content #}
            <div class="prose prose-lg prose-gray max-w-none 
                        prose-headings:text-gray-900 prose-headings:font-bold
                        prose-p:text-gray-700 prose-p:leading-relaxed
                        prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline
                        prose-strong:text-gray-900 prose-strong:font-semibold">
                {% if page.content %}
                    {{ page.content|raw }}
                {% else %}
                    <p class="text-gray-500 italic">No hay contenido disponible para esta página.</p>
                    <p class="text-sm text-gray-400 mt-4">
                        DEBUG: Template actual: {{ page.template ?: 'default' }}<br>
                        Archivo de página: {{ page.filePathClean ?: 'No definido' }}
                    </p>
                {% endif %}
            </div>

            {# Tags - if defined #}
            {% if page.taxonomy.tag %}
            <footer class="mt-12 pt-8 border-t border-gray-200">
                <div class="flex flex-wrap items-center gap-2">
                    <span class="text-sm font-medium text-gray-700">Etiquetas:</span>
                    {% for tag in page.taxonomy.tag %}
                        <a href="{{ base_url }}/tag{{ config.system.param_sep }}{{ tag }}" 
                           class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-primary-100 text-primary-800 hover:bg-primary-200 transition-colors">
                            {{ tag }}
                        </a>
                    {% endfor %}
                </div>
            </footer>
            {% endif %}
        </div>
    </article>

    {# Related/Featured Content #}
    {% if page.header.show_related and page.collection() %}
    <section class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center">
                Contenido relacionado
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for related_page in page.collection().limit(3) %}
                    {% if related_page.url != page.url %}
                    <article class="bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-300 overflow-hidden group">
                        {% if related_page.header.featured_image %}
                        <div class="aspect-w-16 aspect-h-9 overflow-hidden">
                            <img src="{{ url(related_page.media[related_page.header.featured_image].url) }}" 
                                 alt="{{ related_page.title }}"
                                 class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                        </div>
                        {% endif %}
                        <div class="p-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
                                <a href="{{ related_page.url }}" class="stretched-link">
                                    {{ related_page.title }}
                                </a>
                            </h3>
                            {% if related_page.summary %}
                                <p class="text-gray-600 text-sm line-clamp-3">
                                    {{ related_page.summary }}
                                </p>
                            {% endif %}
                            {% if related_page.date %}
                                <time class="block mt-3 text-xs text-gray-500" datetime="{{ related_page.date|date('c') }}">
                                    {{ related_page.date|date('j M Y') }}
                                </time>
                            {% endif %}
                        </div>
                    </article>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# Call to Action - if defined in page header #}
    {% if page.header.cta %}
    <section class="py-12 bg-gradient-to-r from-primary-600 to-primary-700">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
                {{ page.header.cta.title ?: '¿Listo para trabajar juntos?' }}
            </h2>
            {% if page.header.cta.description %}
                <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
                    {{ page.header.cta.description }}
                </p>
            {% endif %}
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="{{ page.header.cta.primary_link ?: '/contacto' }}" 
                   class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-700 bg-white hover:bg-gray-50 transition-colors duration-200">
                    {{ page.header.cta.primary_text ?: 'Hablemos' }}
                </a>
                {% if page.header.cta.secondary_link %}
                    <a href="{{ page.header.cta.secondary_link }}" 
                       class="inline-flex items-center justify-center px-6 py-3 border-2 border-white text-base font-medium rounded-md text-white hover:bg-white hover:text-primary-700 transition-colors duration-200">
                        {{ page.header.cta.secondary_text ?: 'Ver portfolio' }}
                    </a>
                {% endif %}
            </div>
        </div>
    </section>
    {% endif %}
</div>
{% endblock %}