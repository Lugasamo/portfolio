{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    
    {# Page-specific meta tags #}
    {% if page.header.description %}
        <meta name="description" content="{{ page.header.description|e('html_attr') }}">
    {% endif %}
    
    {% if page.header.keywords %}
        <meta name="keywords" content="{{ page.header.keywords|e('html_attr') }}">
    {% endif %}
    
    {# Open Graph meta tags #}
    <meta property="og:type" content="article">
    <meta property="og:title" content="{{ page.title|e('html_attr') }} | {{ site.title|e('html_attr') }}">
    <meta property="og:description" content="{{ page.header.description ?: site.metadata.description|e('html_attr') }}">
    <meta property="og:url" content="{{ page.url(true, true) }}">
    {% if page.header.featured_image %}
        <meta property="og:image" content="{{ url(page.media[page.header.featured_image].url, true) }}">
    {% endif %}
    
    {# Twitter Card meta tags #}
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ page.title|e('html_attr') }} | {{ site.title|e('html_attr') }}">
    <meta name="twitter:description" content="{{ page.header.description ?: site.metadata.description|e('html_attr') }}">
    {% if page.header.featured_image %}
        <meta name="twitter:image" content="{{ url(page.media[page.header.featured_image].url, true) }}">
    {% endif %}
    
    {# Structured data #}
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "CreativeWork",
        "name": {{ page.title|json_encode|raw }},
        "description": {{ (page.header.description ?: site.metadata.description)|json_encode|raw }},
        "url": "{{ page.url(true, true) }}",
        "creator": {
            "@type": "Person",
            "name": {{ site.author.name|json_encode|raw }},
            "jobTitle": "UI/UX Designer"
        },
        {% if page.header.client %}
        "client": {{ page.header.client|json_encode|raw }},
        {% endif %}
        {% if page.date %}
        "dateCreated": "{{ page.date|date('Y-m-d') }}",
        {% endif %}
        {% if page.header.technologies %}
        "keywords": {{ page.header.technologies|join(', ')|json_encode|raw }},
        {% endif %}
        {% if page.header.featured_image %}
        "image": "{{ url(page.media[page.header.featured_image].url, true) }}"
        {% endif %}
    }
    </script>
{% endblock %}
{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-[8rem] md:text-[16rem] lg:text-[20rem] text-nowrap font-bold text-gray-900 mb-6">
        {{ page.title }}
    </h1>
    {% if page.header.description %}
        <p class="text-xl md:text-2xl text-gray-700 max-w-3xl mb-8">
            {{ page.header.description }}
        </p>
    {% endif %}
     {# Back Button #}
    <a href="/projects" class="inline-flex items-center text-white/80 hover:text-white mb-6 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Volver a proyectos
    </a>
</div>

    {# Project Details Grid #}
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                {# Main Content #}
                <div class="lg:col-span-2">
                    {% if page.content %}
                        <div class="prose prose-lg prose-gray max-w-none 
                                    prose-headings:text-gray-900 prose-headings:font-bold
                                    prose-p:text-gray-700 prose-p:leading-relaxed
                                    prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline
                                    prose-strong:text-gray-900 prose-strong:font-semibold
                                    prose-img:rounded-lg prose-img:shadow-lg">
                            {{ page.content|raw }}
                        </div>
                    {% endif %}
                </div>
                
                {# Project Sidebar #}
                <div class="lg:col-span-1">
                    <div class="bg-gray-50 rounded-2xl p-8 sticky top-8">
                        <h3 class="text-lg font-bold text-gray-900 mb-6">Detalles del proyecto</h3>
                        
                        {# Client #}
                        {% if page.header.client %}
                            <div class="mb-6">
                                <dt class="text-sm font-medium text-gray-600 mb-1">Cliente</dt>
                                <dd class="text-base text-gray-900">{{ page.header.client }}</dd>
                            </div>
                        {% endif %}
                        
                        {# Date #}
                        {% if page.date %}
                            <div class="mb-6">
                                <dt class="text-sm font-medium text-gray-600 mb-1">Fecha</dt>
                                <dd class="text-base text-gray-900">{{ page.date|date('F Y') }}</dd>
                            </div>
                        {% endif %}
                        
                        {# Duration #}
                        {% if page.header.duration %}
                            <div class="mb-6">
                                <dt class="text-sm font-medium text-gray-600 mb-1">Duración</dt>
                                <dd class="text-base text-gray-900">{{ page.header.duration }}</dd>
                            </div>
                        {% endif %}
                        
                        {# Role #}
                        {% if page.header.role %}
                            <div class="mb-6">
                                <dt class="text-sm font-medium text-gray-600 mb-1">Mi rol</dt>
                                <dd class="text-base text-gray-900">{{ page.header.role }}</dd>
                            </div>
                        {% endif %}
                        
                        {# Technologies #}
                        {% if page.header.technologies %}
                            <div class="mb-6">
                                <dt class="text-sm font-medium text-gray-600 mb-3">Tecnologías</dt>
                                <dd class="flex flex-wrap gap-2">
                                    {% for tech in page.header.technologies %}
                                        <span class="px-3 py-1 text-sm bg-white text-gray-700 rounded-full border border-gray-200">
                                            {{ tech }}
                                        </span>
                                    {% endfor %}
                                </dd>
                            </div>
                        {% endif %}
                        
                        {# Links #}
                        {% if page.header.links %}
                            <div class="mb-6">
                                <dt class="text-sm font-medium text-gray-600 mb-3">Enlaces</dt>
                                <dd class="space-y-2">
                                    {% for link in page.header.links %}
                                        <a href="{{ link.url }}" 
                                           target="_blank" 
                                           rel="noopener noreferrer"
                                           class="flex items-center text-primary-600 hover:text-primary-700 transition-colors">
                                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                            </svg>
                                            {{ link.title }}
                                        </a>
                                    {% endfor %}
                                </dd>
                            </div>
                        {% endif %}
                        
                        {# Team #}
                        {% if page.header.team %}
                            <div class="mb-6">
                                <dt class="text-sm font-medium text-gray-600 mb-3">Equipo</dt>
                                <dd class="space-y-2">
                                    {% for member in page.header.team %}
                                        <div class="text-sm text-gray-700">
                                            <span class="font-medium">{{ member.name }}</span>
                                            {% if member.role %}
                                                <span class="text-gray-500"> - {{ member.role }}</span>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </dd>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Project Gallery #}
    {% if page.header.gallery %}
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Galería del proyecto</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for image in page.header.gallery %}
                    <div class="group cursor-pointer overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
                        <img src="{{ url(page.media[image].url) }}" 
                             alt="Imagen del proyecto {{ page.title }}"
                             class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300">
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# Process Section #}
    {% if page.header.process %}
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Proceso de diseño</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {% for step in page.header.process %}
                    <div class="text-center">
                        <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <span class="text-2xl font-bold text-primary-600">{{ loop.index }}</span>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ step.title }}</h3>
                        <p class="text-gray-600 text-sm">{{ step.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# Challenge and Solution #}
    {% if page.header.challenge or page.header.solution %}
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                {% if page.header.challenge %}
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">El desafío</h2>
                        <div class="prose prose-lg text-gray-700">
                            {{ page.header.challenge|raw }}
                        </div>
                    </div>
                {% endif %}
                
                {% if page.header.solution %}
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">La solución</h2>
                        <div class="prose prose-lg text-gray-700">
                            {{ page.header.solution|raw }}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
    {% endif %}

    {# Results/Metrics #}
    {% if page.header.results %}
    <section class="py-16 bg-primary-600">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-white mb-12 text-center">Resultados</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {% for related_project in related_projects %}
                    <article class="group">
                        <div class="relative overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 mb-4">
                            {% if related_project.header.featured_image %}
                                <img src="{{ url(related_project.media[related_project.header.featured_image].url) }}" 
                                     alt="{{ related_project.title }}"
                                     class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                            {% else %}
                                <div class="w-full h-48 bg-gradient-to-br from-primary-500 to-primary-600"></div>
                            {% endif %}
                            <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                                <span class="text-white font-medium">Ver proyecto</span>
                            </div>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
                            <a href="{{ related_project.url }}">{{ related_project.title }}</a>
                        </h3>
                        {% if related_project.header.description %}
                            <p class="text-gray-600 text-sm line-clamp-2">{{ related_project.header.description }}</p>
                        {% endif %}
                    </article>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# Contact CTA #}
    <section class="py-16 bg-gradient-to-r from-primary-600 to-primary-700">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                ¿Te gusta este proyecto?
            </h2>
            <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
                Trabajemos juntos en tu próximo proyecto. Hablemos sobre cómo puedo ayudarte.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/contacto" 
                   class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-primary-700 bg-white hover:bg-gray-50 transition-colors">
                    Iniciar conversación
                </a>
                <a href="/projects" 
                   class="inline-flex items-center justify-center px-8 py-3 border-2 border-white text-base font-medium rounded-md text-white hover:bg-white hover:text-primary-700 transition-colors">
                    Ver más proyectos
                </a>
            </div>
        </div>
    </section>
</div>

{# Lightbox for gallery images #}
<div id="lightbox" class="fixed inset-0 bg-black/90 z-50 hidden flex items-center justify-center p-4">
    <div class="relative max-w-4xl max-h-full">
        <button id="closeLightbox" class="absolute -top-12 right-0 text-white hover:text-gray-300 transition-colors">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
        <img id="lightboxImage" src="" alt="" class="max-w-full max-h-full object-contain">
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Lightbox functionality
    const lightbox = document.getElementById('lightbox');
    const lightboxImage = document.getElementById('lightboxImage');
    const closeLightbox = document.getElementById('closeLightbox');
    const galleryImages = document.querySelectorAll('.group img');
    
    galleryImages.forEach(img => {
        img.addEventListener('click', function() {
            lightboxImage.src = this.src;
            lightboxImage.alt = this.alt;
            lightbox.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        });
    });
    
    closeLightbox.addEventListener('click', function() {
        lightbox.classList.add('hidden');
        document.body.style.overflow = 'auto';
    });
    
    lightbox.addEventListener('click', function(e) {
        if (e.target === lightbox) {
            lightbox.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
    });
    
    // Keyboard navigation
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && !lightbox.classList.contains('hidden')) {
            lightbox.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
    });
    
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
});
</script>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

/* Smooth transitions for hover effects */
.group {
    transition: all 0.3s ease;
}

/* Custom scrollbar for webkit browsers */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: #f1f1f1;
}

::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: #a8a8a8;
}

/* Lightbox styles */
#lightbox {
    backdrop-filter: blur(4px);
}

#lightboxImage {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
}
</style>
{% endblock %}