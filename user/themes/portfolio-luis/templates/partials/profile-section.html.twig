{% for modular in page.collection %}
  {% if modular.header.title == 'Profile Section' %}
    <section class="bg-gray-100 py-12">
      <div class="container mx-auto px-4 text-center max-w-5xl">
        <h2 class="text-3xl font-bold mb-4">{{ modular.header.title }}</h2>
        <p class="mb-6 text-gray-700">{{ modular.header.description }}</p>

        {% if modular.header.image %}
          <div class="mb-8">
            <img src="{{ modular.media[modular.header.image].url }}" alt="{{ modular.header.title }}" class="mx-auto rounded-lg shadow-md max-h-64 object-contain" />
          </div>
        {% endif %}

        <div class="flex flex-col md:flex-row justify-center gap-12 text-left">
          <div class="md:w-1/2">
            <h3 class="text-xl font-semibold mb-3">Left Column</h3>
            <ul class="list-disc list-inside text-gray-600">
              {% for item in modular.header.list_col_left|split('\n') %}
                {% if item|trim %}
                  <li>{{ item }}</li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>

          <div class="md:w-1/2">
            <h3 class="text-xl font-semibold mb-3">Right Column</h3>
            <ul class="list-disc list-inside text-gray-600">
              {% for item in modular.header.list_col_right|split('\n') %}
                {% if item|trim %}
                  <li>{{ item }}</li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </section>
  {% endif %}
{% endfor %}