<!DOCTYPE html>
<html "{{ grav.language.getActive ?: site.default_lang ?: 'en' }}">
<head class="flex-grow">
    {% block head %}
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="default">
        <link rel="apple-touch-icon" href="{{ url('theme://dist/icons/icon-192x192.png') }}">
        <title>{% if page.title %}{{ page.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
        <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png') }}" />
        <link rel="canonical" href="{{ page.url(true, true) }}" />
        {# PWA Manifest #}
        {#<link rel="manifest" href="{{ url('theme://dist/manifest.json') }}">#}
        {# Preload critical fonts #}
        <link rel="preload" href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&family=Barlow:wght@600;700;800&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
        <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&family=Barlow:wght@600;700;800&display=swap"></noscript>
        {# Stylesheets #}
        {% block stylesheets %}
        {# Tailwind CSS output - main stylesheet #}
        <link href="{{ url('theme://css/output.css') }}" rel="stylesheet">
        {% endblock %}
        {% include 'partials/metadata.html.twig' %}
        {% block head_bottom %}
        {% endblock %}
    {% endblock head %}
</head>

<body id="top" class="flex flex-col h-screen">
    {# Skip to content for accessibility #}
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-50 text-white px-4 py-2 rounded-md z-50">Skip to main content</a>
    
    {% block header %}
    <header class="p-ls-padding-h sticky top-0 z-40 bg-white/80 backdrop-blur-md border-b border-gray-200/50 transition-all duration-300" id="header">

        <nav aria-label="Main navigation">

            <div class="flex justify-between items-center py-2">
                {# Logo/Brand #}
                <div class="flex-shrink-0">
                    <a href="{{ base_url_absolute }}" class="group">
                        {% if config.site.logo %}
                            <img src="{{ url(config.site.logo) }}" 
                                 alt="{{ site.title }}" 
                                 class="size-10 sm:size-12 md:size-16 lg:size-20 w-auto transition-transform duration-200 group-hover:scale-105">
                        {% endif %}
                    </a>
                </div>

                {# Desktop Navigation - Center #}
                <div class="flex space-x-8 hidden lg:flex">
                    {% for page in pages.children.visible %}
                        {% set current_page = (page.active or page.activeChild) ? 'current' : '' %}
                        <a href="{{ page.url }}" 
                            class="hover-underline {{ current_page ? 'text-black after:bottom-0 after:h-1px after:w-full after:bg-primary-100;' : '' }}"
                            {% if current_page %}aria-current="page"{% endif %}>
                            {{ page.menu ?: page.title }}
                        </a>
                    {% endfor %}
                </div>

                {# Contact CTA - Left Side #}
                <div class="flex-shrink-0 hidden lg:flex">
                    {# Contact Button #}
                    <a href="{{ base_url_absolute }}/contact" 
                       class="btn-primary flex space-x-4">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="{{ class|default('w-5 h-5') }}">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                        </svg>
                        <span class="hidden text-md md:text-md lg:text-lg font-medium sm:inline">Contact</span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="{{ class|default('w-5 h-5') }}">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                        </svg>
                    </a>
                </div>

                {# Mobile menu button #}
                <div class="lg:hidden">
                    <button onclick="toggleMobileMenu()"
                            id="mobile-menu-button"
                            class="mobile-menu-button"
                            aria-controls="mobile-menu" 
                            aria-expanded="false">
                            <span>Menu</span>
                            <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                            </svg>
                        <span class="sr-only">Open main menu</span>
                    </button>
                </div>
            </div>
            
            {# Mobile Navigation #}
            <div id="mobile-menu" 
                 style="display: none; position: absolute; top: 100%; left: 0; right: 0; background: white; border-top: 1px solid #e5e7eb; box-shadow: 0 10px 25px rgba(0,0,0,0.1); z-index: 1000; padding: 16px;">
                
                <p style="color: #059669; font-weight: bold; margin-bottom: 12px; font-size: 14px;">
                    âœ… Mobile Menu Working!
                </p>
                
                {# Mobile Contact Button #}
                <a href="{{ base_url_absolute }}/contact" 
                   onclick="closeMobileMenu()"
                   class="mobile-contact-btn"
                   style="display: flex; align-items: center; justify-content: center; width: 100%; padding: 12px; margin-bottom: 16px; background: linear-gradient(to right, #2563eb, #1d4ed8); color: white; text-decoration: none; border-radius: 8px; font-weight: 600; transition: all 0.3s ease;">
                    <svg style="margin-right: 8px; width: 16px; height: 16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.83 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    ðŸ“§ Contact
                </a>
                
                {# Mobile Menu Items #}
                {% for page in pages.children.visible %}
                    {% set current_page = (page.active or page.activeChild) ? 'current' : '' %}
                    <a href="{{ page.url }}" 
                       onclick="closeMobileMenu()"
                       class="mobile-menu-link"
                       style="display: block; padding: 12px 16px; color: #374151; text-decoration: none; border-radius: 6px; margin-bottom: 4px; transition: all 0.2s ease;"
                       {% if current_page %}aria-current="page"{% endif %}>
                        {{ page.menu ?: page.title }}
                    </a>
                {% endfor %}
            </div>

        </nav>

    </header>
    {% endblock %}

    {# Main Content - Full Width #}
    <div class="bg-black">
        <div class="rounded-b-2xl bg-white">
        {# Main content area with background and dots #}
            <main id="main-content">
                {% block content %}
                {% endblock %}
            </main>
        </div>
    </div>

    {# Footer #} 
    {% block footer %}
        {% include 'partials/footer.html.twig' %}
    {% endblock %}

    {# Mobile Menu JavaScript #}
    <script>
        // Mobile Menu Functions
        function toggleMobileMenu() {
            console.log('Toggle mobile menu');
            var menu = document.getElementById('mobile-menu');
            var button = document.querySelector('.mobile-menu-button');
            
            if (menu.style.display === 'none' || menu.style.display === '') {
                // Show menu
                menu.style.display = 'block';
                menu.style.opacity = '0';
                menu.style.transform = 'translateY(-10px)';
                
                // Animate in
                setTimeout(function() {
                    menu.style.transition = 'all 0.2s ease-out';
                    menu.style.opacity = '1';
                    menu.style.transform = 'translateY(0)';
                }, 10);
                
                button.setAttribute('aria-expanded', 'true');
                console.log('Menu shown');
            } else {
                // Hide menu
                menu.style.transition = 'all 0.2s ease-in';
                menu.style.opacity = '0';
                menu.style.transform = 'translateY(-10px)';
                
                setTimeout(function() {
                    menu.style.display = 'none';
                }, 200);
                
                button.setAttribute('aria-expanded', 'false');
                console.log('Menu hidden');
            }
        }

        function closeMobileMenu() {
            console.log('Close mobile menu');
            var menu = document.getElementById('mobile-menu');
            var button = document.querySelector('.mobile-menu-button');
            
            if (menu.style.display !== 'none') {
                menu.style.transition = 'all 0.2s ease-in';
                menu.style.opacity = '0';
                menu.style.transform = 'translateY(-10px)';
                
                setTimeout(function() {
                    menu.style.display = 'none';
                }, 200);
                
                if (button) {
                    button.setAttribute('aria-expanded', 'false');
                }
            }
        }

        // Close menu when clicking outside
        document.addEventListener('click', function(e) {
            var menu = document.getElementById('mobile-menu');
            var button = e.target.closest('.mobile-menu-button');
            
            // If click is not on button or inside menu, close menu
            if (!button && !menu.contains(e.target) && menu.style.display !== 'none') {
                closeMobileMenu();
            }
        });

        // Close menu on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeMobileMenu();
            }
        });

        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 1024) {
                closeMobileMenu();
            }
        });

    </script>
</body>
</html>