<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: site.default_lang ?: 'es' }}">
<head>
    {% block head %}
    <meta charset="utf-8" />
    <title>{% if page.title %}{{ page.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
    
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />
    
    {% include 'partials/metadata.html.twig' %}
    
    {# Preload critical fonts #}
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&family=Barlow:wght@600;700;800&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&family=Barlow:wght@600;700;800&display=swap"></noscript>
    
    {# Stylesheets #}
    {% block stylesheets %}
        {# Tailwind CSS output - main stylesheet #}
        <link href="{{ url('theme://css/output.css') }}" rel="stylesheet">
    {% endblock %}
    
    {% block head_bottom %}{% endblock %}
    {% endblock head %}
</head>

<body id="top" class="{{ page.body_classes }} font-jakarta antialiased bg-gray-50 text-gray-900">
    {# Skip to content for accessibility #}
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-md z-50">
        Saltar al contenido principal
    </a>
    
    {% block header %}
    <header class="sticky top-0 z-40 bg-white/80 backdrop-blur-md border-b border-gray-200/50 transition-all duration-300" id="header">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Navegación principal">
            <div class="flex justify-between items-center h-16">
                {# Logo/Brand #}
                <div class="flex-shrink-0">
                    <a href="{{ base_url_absolute }}" class="flex items-center space-x-2 text-xl font-bold text-gray-900 hover:text-primary-600 transition-colors">
                        {% if config.site.logo %}
                            <img src="{{ url(config.site.logo) }}" alt="{{ site.title }}" class="h-8 w-auto">
                        {% else %}
                            <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">
                                {{ site.title ?: 'Luis Portfolio' }}
                            </span>
                        {% endif %}
                    </a>
                </div>

                {# Desktop Navigation #}
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-8">
                        {% for page in pages.children.visible %}
                            {% set current_page = (page.active or page.activeChild) ? 'current' : '' %}
                            <a href="{{ page.url }}" 
                               class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-all duration-200 {{ current_page ? 'text-primary-600 bg-primary-50' : '' }}"
                               {% if current_page %}aria-current="page"{% endif %}>
                                {{ page.menu ?: page.title }}
                            </a>
                        {% endfor %}
                    </div>
                </div>

                {# Mobile menu button #}
                <div class="md:hidden">
                    <button type="button" 
                            class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500" 
                            aria-controls="mobile-menu" 
                            aria-expanded="false"
                            id="mobile-menu-button">
                        <span class="sr-only">Abrir menú principal</span>
                        <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                        </svg>
                    </button>
                </div>
            </div>

            {# Mobile Navigation #}
            <div class="md:hidden hidden" id="mobile-menu">
                <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t border-gray-200">
                    {% for page in pages.children.visible %}
                        {% set current_page = (page.active or page.activeChild) ? 'current' : '' %}
                        <a href="{{ page.url }}" 
                           class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-colors {{ current_page ? 'text-primary-600 bg-primary-50' : '' }}"
                           {% if current_page %}aria-current="page"{% endif %}>
                            {{ page.menu ?: page.title }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </nav>
    </header>
    {% endblock %}

    {# Main Content #}
    <main id="main-content" class="max-w-full">
        {% block content %}{% endblock %}
    </main>

    {% block footer %}
    <footer class="bg-gray-900 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {# About section #}
                <div>
                    <h3 class="text-lg font-semibold mb-4">{{ site.title ?: 'Luis Portfolio' }}</h3>
                    <p class="text-gray-300 text-sm leading-relaxed">
                        {{ site.metadata.description ?: 'Diseñador UI/UX especializado en crear experiencias digitales excepcionales.' }}
                    </p>
                </div>
                
                {# Quick Links #}
                <div>
                    <h3 class="text-lg font-semibold mb-4">Enlaces rápidos</h3>
                    <ul class="space-y-2">
                        {% for page in pages.children.visible %}
                            <li>
                                <a href="{{ page.url }}" class="text-gray-300 hover:text-white text-sm transition-colors">
                                    {{ page.menu ?: page.title }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                
                {# Contact/Social #}
                <div>
                    <h3 class="text-lg font-semibold mb-4">Conectemos</h3>
                    <div class="flex space-x-4">
                        {# Add your social links here #}
                        <a href="#" class="text-gray-300 hover:text-white transition-colors" aria-label="LinkedIn">
