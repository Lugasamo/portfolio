{% extends 'partials/base.html.twig' %}
{% block content %}

{# Hero Section #}
<section class="hero-height mx-auto text-center bg-gradient-to-b from-white to-gray-100">
    <div class="mx-auto text-center">
        <h1 class="hero-font hero-size text-primary-100">
            {{ page.header.title }}
        </h1>
    </div>
</section>

{# Filter Section #}
{% set categories = [] %}
{% for project in page.collection() %}
    {% if project.taxonomy.category %}
        {% set categories = categories|merge(project.taxonomy.category) %}
    {% endif %}
{% endfor %}
{% set categories = categories|array_unique %}

{% if categories|length > 0 %}
<section class="py-8 bg-white border-b border-gray-200 relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap justify-center gap-3">
            <button class="filter-btn active" data-filter="all">
                Todos
            </button>
            {% for category in categories %}
                <button class="filter-btn" data-filter="{{ category|lower }}">
                    {{ category }}
                </button>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# Bento Grid Projects #}
<section class="py-16 lg:py-24 bg-gray-50 text-black">
    <div class="w-full px-4 sm:px-6 lg:px-8">
        <div class="bento-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-6 auto-rows-[200px]">
            {% for project in page.collection() %}
                {% set gridClass = '' %}
                {% if loop.index == 1 %}
                    {% set gridClass = 'md:col-span-2 md:row-span-2' %}
                {% elseif loop.index == 3 %}
                    {% set gridClass = 'lg:col-span-2' %}
                {% elseif loop.index == 5 %}
                    {% set gridClass = 'md:row-span-2' %}
                {% elseif loop.index == 8 %}
                    {% set gridClass = 'lg:col-span-2' %}
                {% endif %}
                
                <article class="project-card group relative overflow-hidden rounded-2xl bg-white text-black shadow-sm hover:shadow-xl transition-all duration-300 {{ gridClass }}"
                         data-category="{{ project.taxonomy.category ? project.taxonomy.category|join(' ')|lower : 'uncategorized' }}">
                    
                    {# Project Image #}
                    {% if project.header.project_media %}
                    {% set first_file = project.header.project_media|first %}
                    {% set image = project.media.images[first_file.name] %}

                    {% if image %}
                        <div class="absolute inset-0">
                            <img src="{{ image.url }}"
                                alt="{{ project.title }}"
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                loading="lazy">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
                        </div>
                    {% endif %}
                    {% else %}
                        <div class="absolute inset-0 bg-gradient-to-br from-primary-500 to-primary-100"></div>
                    {% endif %}
                    
                    {# Project Content #}
                    <div class="relative z-10 p-6 h-full flex flex-col justify-end">
                        {# Category Badge #}
                        {% if project.taxonomy.category %}
                            <div class="mb-3">
                                {% for category in project.taxonomy.category %}
                                    <span class="inline-block px-3 py-1 text-xs font-medium bg-white/20 text-black rounded-full backdrop-blur-sm">
                                        {{ category }}
                                    </span>
                                {% endfor %}
                            </div>
                        {% endif %}
                        
                        {# Project Title #}
                        <h3 class="text-lg md:text-xl font-bold text-black mb-2 group-hover:text-primary-300 transition-colors">
                            <a href="{{ project.url }}" class="stretched-link">
                                {{ project.title }}
                            </a>
                        </h3>
                        
                        {# Project Description #}
                        {% if project.header.description %}
                            <p class="text-black/90 text-sm line-clamp-2 mb-3">
                                {{ project.header.description }}
                            </p>
                        {% endif %}
                        
                        {# Project Meta #}
                        <div class="flex items-center justify-between text-xs text-black/70">
                            {% if project.header.client %}
                                <span>{{ project.header.client }}</span>
                            {% endif %}
                            {% if project.date %}
                                <time datetime="{{ project.date|date('c') }}">
                                    {{ project.date|date('Y') }}
                                </time>
                            {% endif %}
                        </div>
                        
                        {# Technologies Used #}
                        {% if project.header.technologies %}
                            <div class="mt-3 flex flex-wrap gap-1">
                                {% for tech in project.header.technologies|slice(0, 3) %}
                                    <span class="px-2 py-1 text-xs bg-white/10 text-black rounded backdrop-blur-sm">
                                        {{ tech }}
                                    </span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    
                    {# Hover Effect Overlay #}
                    <div class="absolute inset-0 bg-primary-100/90 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                        <div class="text-center text-black">
                            <svg class="w-12 h-12 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            <span class="text-sm font-medium">Ver proyecto</span>
                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>
        
        {# Load More Button #}
        {% if page.collection().count() > 12 %}
            <div class="text-center mt-12">
                <button class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors">
                    Cargar más proyectos
                </button>
            </div>
        {% endif %}
    </div>
</section>

{# Profile Section #}
{% if page.header.profile %}
<section class="bg-white py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-3 lg:gap-8 space-y-12 lg:space-y-0">
            {# Profile Image #}
            <div class="lg:col-span-1 flex justify-center lg:justify-start">
                {% set profileImage = page.media[page.header.profile.image] ?? null %}
                {% if profileImage %}
                    <img 
                        src="{{ profileImage.url }}"
                        alt="{{ page.header.profile.name ?: 'Foto de perfil' }}" 
                        class="w-64 h-64 rounded-2xl object-cover shadow-xl transition-transform duration-300 hover:scale-105"
                        loading="lazy"
                    >
                {% endif %}
            </div>
            
            {# Profile Info #}
            <div class="lg:col-span-2 space-y-6">
                <div class="space-y-4">
                    <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
                        {{ page.header.profile.name }}
                    </h2>
                    <p class="text-lg text-gray-600 leading-relaxed">
                        {{ page.header.profile.bio }}
                    </p>
                </div>
                
                {# Skills Grid #}
                <div class="grid md:grid-cols-2 gap-8 pt-8">
                    {% if page.header.columnl.skills %}
                        <div class="space-y-3">
                            <h3 class="text-xl font-semibold text-gray-900">Habilidades Técnicas</h3>
                            <div class="text-gray-600">
                                {{ page.header.columnl.skills | raw }}
                            </div>
                        </div>
                    {% endif %}
                    
                    {% if page.header.columnr.skills %}
                        <div class="space-y-3">
                            <h3 class="text-xl font-semibold text-gray-900">Herramientas</h3>
                            <div class="text-gray-600">
                                {{ page.header.columnr.skills | raw }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}

{# JavaScript mejorado para filtrado #}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const projectCards = document.querySelectorAll('.project-card');
    
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            const filter = this.getAttribute('data-filter');
            
            // Update active button
            filterButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
            
            // Filter projects with animation
            projectCards.forEach(card => {
                const cardCategories = card.getAttribute('data-category');
                const shouldShow = filter === 'all' || cardCategories.includes(filter);
                
                if (shouldShow) {
                    card.style.display = 'block';
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 50);
                } else {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    
                    setTimeout(() => {
                        card.style.display = 'none';
                    }, 300);
                }
            });
        });
    });
});
</script>

{% endblock %}